" basic vim setting
syntax enable
set number
set hlsearch
set expandtab
set autoindent
set ts=4
set encoding=utf-8
set foldlevelstart=20
set inccommand=nosplit

set hidden
set nobackup
set nowritebackup
set cmdheight=2
set updatetime=300
set shortmess+=c

